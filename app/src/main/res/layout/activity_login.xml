<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context=".HomeActivity">

<Button
    android:id="@+id/loginButton"
    android:theme="@style/Theme.OidcLib.Button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:onClick="doLogin"
    android:padding="10pt"
    android:text="@string/loginButtonText"
    tools:ignore="RtlHardcoded" />

<Button
    android:id="@+id/editConfButton"
    android:theme="@style/Theme.OidcLib.Button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignEnd="@+id/loginButton"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignRight="@+id/loginButton"
    android:layout_below="@+id/loginButton"
    android:layout_marginTop="37dp"
    android:onClick="doConfEdit"
    android:padding="10pt"
    android:text="@string/editConfButton" />

<Button
    android:id="@+id/requestButton"
    android:theme="@style/Theme.OidcLib.Button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignEnd="@+id/editConfButton"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignRight="@+id/editConfButton"
    android:layout_below="@+id/editConfButton"
    android:layout_marginTop="37dp"
    android:onClick="getProjects"
    android:padding="10pt"
    android:text="@string/requestButton" />

<Button
    android:id="@+id/logoutButton"
    android:theme="@style/Theme.OidcLib.Button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignEnd="@+id/loginButton"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignRight="@+id/loginButton"
    android:layout_below="@+id/requestButton"
    android:layout_marginTop="37dp"
    android:onClick="doLogout"
    android:padding="10pt"
    android:text="@string/logoutButtonText" />

<Spinner
    android:id="@+id/projects_spinner"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

<Spinner
    android:id="@+id/datakeys_spinner"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

<ProgressBar
    android:id="@+id/progressBar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:indeterminate="true" />

</RelativeLayout>
